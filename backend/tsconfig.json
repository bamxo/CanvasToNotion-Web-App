{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "outDir": "./dist",
    "rootDir": "./public",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "moduleDetection": "force",
    "types": ["jest", "node"]
  },
  "include": ["public/**/*", "public/config", "public/controllers", "public/middleware", "public/routes", "public/index.ts", "public/types.ts"],
  "exclude": ["node_modules"]
}
